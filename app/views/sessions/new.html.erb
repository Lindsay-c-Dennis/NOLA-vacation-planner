<%= form_tag('/session', method: :post) do %>

	<div class="form-group">
		<%= label_tag(:username, "Your Username:") %>
		<%= text_field_tag(:username) %>
	</div>

	<div class="form-group">
		<%= label_tag(:password, "Your Password:") %>
		<%= password_field_tag(:password) %>
	</div>

	<div class="action">
		<%= submit_tag "Log In" %>
	</div>

<% end %>	