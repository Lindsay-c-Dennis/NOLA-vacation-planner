<h1>Edit Profile for <%=@user.name%></h1>

<%= form_for @user do |f| %>
	<%= f.hidden_field :name %>
	<%= f.hidden_field :password %>
	<%= f.hidden_field :email %>
	<%= f.label :guide_status, "Check this box if you are a tour guide" %>
	<%= f.check_box :guide_status %>
	<div class: "action">
		<%= f.submit %>
	</div>
<% end %>	