<h1>Local Landmarks:</h1>

<button id="view-cats" class="btn btn-primary">Show Categories</button>
<button id="view-neighborhoods" class="btn btn-primary">Show Neighborhoods</button>

<div id="categories", style="display: none">
	<ul>
		<h3>Landmark Categories</h3>
		<% @categories.each do |category| %>
			<li><h4><%= link_to category.name, category_path(category) %></h4></li>
		<% end %>	
	</ul>
</div>

<div id="neighborhood-list", style="display: none">
	<ul>
		<h3>New Orleans Neighborhoods</h3>
		<% @neighborhoods.each do |neighborhood| %>
			<li><h4><%= link_to neighborhood.name, neighborhood_path(neighborhood) %></h4></li>
		<% end %>	
	</ul>
</div>

<% @landmarks.each do |landmark| %>
	<h3><%= link_to landmark.name, landmark_path(landmark) %></h3>
	<%= image_tag landmark.image_link, style: "width: 40%" %>
	<h4><ul>
		<li>Category: <%= link_to landmark.category.name, category_path(landmark.category) %></li>
		<li>Neighborhood: <%= link_to landmark.neighborhood.name, neighborhood_path(landmark.neighborhood) %></li>
		<li>Description: <%= landmark.description %> </li>	
	</ul></h4>
<% end %>	

<% if current_user.guide_status %>
	<%= link_to "Add a New Landmark", new_landmark_path, class: "btn btn-primary" %>
<% end %>